<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.anoto.ash.database.Font" table="tb_fonts" dynamic-update="true">
        <id name="id" type="int">
            <column name="id" sql-type="int"/>
            <generator class="identity"/>
        </id>
        
        <property name="name" type="string" length="3">
            <column name="name" />
        </property>
    </class>
</hibernate-mapping>
